<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <title>Upadate Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="/assets/images/favicon.ico">
    
    <!-- Bootstrap Css -->
    <link href="/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>

<body data-sidebar="dark">

    <!-- Begin page -->
    <div id="layout-wrapper">

        <%-include('../../include/header')%>
        
        <!-- ========== Left Sidebar Start ========== -->
        <%-include('../../include/leftsidebar')%>
        <!-- Left Sidebar End -->

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content" action="/employee/updateemployee" method="post">

            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="page-title-box">
                                <h4>Edit</h4>
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="/employee/emplidt">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="/employee/updateemployee">Profile</a></li>
                                        <!-- <li class="breadcrumb-item active"><a href="/testing/updateprofile">Edit</a></li> -->
                                    </ol>
                            </div>
                        </div>
                    </div>
                    <div class="main-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="card" style="height: 100%;">
                                  <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                      <img src="/assets/upload/1.png" alt="Admin" class="rounded-circle" width="150">
                                      <div class="mt-8" style="margin-top: 20%;">
                                        <h4><%=data.name%></h4>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            <div class="col-lg-8">
                                <div class="card" style="height: 95%">
                                    <form action="/employee/updateemployee/<%= data._id %>" method="post" >
                                    <div class="card-body">
                                       
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" name="name" value="<%= data.name %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Phone</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" name="phone" value="<%= data.phone %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">City</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" name="city" value="<%= data.city %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Gender</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" name="gender" value="<%= data.gender %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Designation</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" name="designation" value="<%= data.designation %>">
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Salary</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" class="form-control" name="salary" value="<%= data.salary %>">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9 text-secondary">
                                             <input type="file" name="photo" accept="images/*"/>
                                            </div>
                                        </div>
                                        <div class="row" style="margin-top: 1%;">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9 text-secondary">
                                               <button type="submit" class="btn btn-primary px-4">Update Profile</button>
                                            </div>
                                        </div>
                                       
                                        <!-- <form action="/testing//uploadphoto" method="post" enctype="multipart/form-data"> -->
                                            <!-- <div class="row" style="margin-top: 1%;">
                                                <div class="col-sm-3"></div>
                                                <div class="col-sm-9 text-secondary">
                                                   <button type="submit" class="btn btn-primary px-4">Update Photo</button>
                                                  
                                                </div>
                                            </div> -->
                                        <!-- </form> -->
                                    </div>
                                </div>
                            </form>
                            </div>
                        </div>
                    </div>

                    <%-include ("../../include/footer") %>
                </div>
                <!-- end main content-->

            </div>
            <!-- END layout-wrapper -->
            
            <!-- JAVASCRIPT -->
            <script src="/assets/libs/jquery/jquery.min.js"></script>
            <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script src="/assets/libs/metismenu/metisMenu.min.js"></script>
            <script src="/assets/libs/simplebar/simplebar.min.js"></script>
            <script src="/assets/libs/node-waves/waves.min.js"></script>
            <script src="/assets/libs/jquery-sparkline/jquery.sparkline.min.js"></script>

            <!--Morris Chart-->
            <script src="/assets/libs/morris.js/morris.min.js"></script>
            <script src="/assets/libs/raphael/raphael.min.js"></script>

            <script src="/assets/js/pages/dashboard.init.js"></script>

            <!-- App js -->
            <script src="/assets/js/app.js"></script>
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
</body>

</html>